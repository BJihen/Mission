@model IEnumerable<PonosWeb.Models.UserViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyTemplate.cshtml";
}

<div class="item">
    <img src="@Url.Content("~/Content/MyTemplate/images/")banner4.png" alt="slider" title="slider" class="img-responsive" />
    <div class="slide-detail">
        <div class="container">
            <div class="slider-caption">
                <div class="off"></div>
                <h1>Profile </h1>
                <div class="col-md-4 col-sm-4 col-xs-12 paddright">

                </div>

            </div>
        </div>
    </div>
</div>

<!-- job start here -->
<div id="job">
    <div class="container">
        <div class="row">


            <div class="tab-content">
                <div class="tab-pane active" id="profile">
                    <div class="col-md-12">
                        <form class="form-horizontal candidate-single" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <div class="col-sm-4">
                                        <img src="@Url.Content("~/Content/MyTemplate/images/")img2.jpg" alt="my_profile" title="my_profile" class="img-responsive">

                                    </div>
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-sm-8">
                                            <div class="matter">
                                                <label>
                                                    FULL NAME
                                                    <button type="submit" value="Submit" class="icon"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                                </label>
                                                <span>@Html.DisplayFor(modelItem => item.firstnamePerson)</span>
                                            </div>
                                            <div class="matter">
                                                <label>
                                                    SOLE
                                                    <button type="submit" value="Submit" class="icon"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                                </label>
                                                <span>@Html.DisplayFor(modelItem => item.solde)</span>
                                            </div>
                                        </div>}
                                </div>




                            </fieldset>
                        </form>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>
<!-- job end here -->

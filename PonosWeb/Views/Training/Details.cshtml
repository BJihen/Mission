@model PonosWeb.Models.TrainingModelView

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MyTemplate.cshtml";
}






<div class="item">
    <img src="@Url.Content("~/Content/MyTemplate/images/")banner4.png" alt="slider" title="slider" class="img-responsive" />
    <div class="slide-detail">
        <div class="container">
            <div class="slider-caption">
                <div class="off"></div>
                <h1>Detail course </h1>
                <div class="col-md-4 col-sm-4 col-xs-12 paddright">

                </div>

            </div>
        </div>
    </div>
</div>

<!-- job start here -->
<div id="jobdetail">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12 hidden-xs">
                <img src="@Url.Content("~/Content/MyTemplate/images/")p6.png" alt="p6" title="p6" class="img-responsive" />
                <div class="left-side">
                    <ul class="list-unstyled">

                        <li>
                            <h5>
                                <i class="fa fa-money" aria-hidden="true"></i>
                                Cost
                            </h5>
                            <p>@Html.DisplayFor(model => model.price)</p>
                        </li>
                        <li>
                            <h5>
                                <i class="fa fa-shield" aria-hidden="true"></i>
                                Titre Formation
                            </h5>
                            <p>@Html.DisplayFor(model => model.titre)</p>
                        </li>
                        <li>
                            <h5><i class="fa fa-clock-o" aria-hidden="true"></i> Description</h5>
                            <p>@Html.DisplayFor(model => model.description)</p>
                        </li>

                        <li>

                            @*<button type="button" class="btn btn-info" value="Create"   data-toggle="modal"  data-target="#myModal"   onclick="window.location.href='@Url.Action("Create","Reservation", new { id=Model.trainingonlineId})'">RESERVE</button>*@
                            @Html.ActionLink("Reservation", "Create", "Reservation", new { id = Model.trainingonlineId }, new { @class = "btn btn-danger", @style = "color:white", data_toggle = "modal", data_target = "#myModal" })
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8 col-sm-8 col-xs-12 paddleft content">



                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="color:plum">#</th>
                            <th style="color:plum">Titre</th>
                            <th style="color:plum">Description</th>
                            <th style="color:plum">Nombre de page</th>
                            <th style="color:plum">Date d'ajout</th>
                           
                        </tr>
                    </thead>


                    @foreach (var item in ViewBag.data)
                    {
                        <tr>
                            <td>

                            
                            </td>
                           
                            <td>
                                @item.titre
                            </td>
                            <td style="overflow-x :auto;">

                                @item.description

                            </td>
                            <td>
                                @item.nbPage
                            </td>
                            <td>
                                @item.dateAjout
                            </td>

                            <td>
                                @Html.ActionLink("Details", "Details", "Course",new { id = item.CourseId }, htmlAttributes: new { @class = "btn btn-warning", data_toggle = "modal", data_target = "#myModal", @style = "color:white" })
                                @Html.ActionLink("Edit", "Edit", "Course", new { id = item.CourseId }, htmlAttributes: new { @class = "btn btn-info", @style = "color:white" })

                                @Html.ActionLink("Delete", "Delete", "Course", new { id = item.CourseId }, new { @class = "btn btn-danger", @style = "color:white", data_toggle = "modal", data_target = "#myModal" })






                            </td>
                        </tr>
                                    }
                </table>











            </div>





        </div>
    </div>
    </div>




    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">


                <div class="modal-body">


                    <a class="custom-close"> My Custom Close Link </a>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <script>


        $(function () {
            $(".custom-close").on('click', function () {
                $('#myModal').modal('hide');
            });
        });</script>

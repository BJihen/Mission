@model IEnumerable<PonosWeb.Models.TrainingModelView>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyTemplate.cshtml";
}





<div class="item">
    <img src="@Url.Content("~/Content/MyTemplate/images/")banner4.png" alt="slider" title="slider" class="img-responsive" />
    <div class="slide-detail">
        <div class="container">
            <div class="slider-caption">
                <div class="off"></div>
                <h1> Trainings List </h1>
                <div class="col-md-4 col-sm-4 col-xs-12 paddright">

                </div>

            </div>
        </div>
    </div>
</div>

<!-- jobs start here -->
<div id="jobs">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <!-- about-content start here -->
                <div class="jobs-content">

                    <ul class="list-inline">
                        <li>
                            <a href="index.html">Home</a>
                        </li>
                        <li>></li>
                        <li>
                            <a href="jobs-detail.html">Trainings</a>
                        </li>
                    </ul>
                </div>
                <!-- jobs-content end here -->
            </div>
        </div>
    </div>
</div>
<!-- jobs end here -->





<div id = "contact-form" >
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                @Html.ActionLink("Create", "Create", "Training", new { @class = "btn btn-info", @style = "color:white" })
                <table class="table table-hover">
                    <thead>
                        <tr>
                            @*<th style="color:plum">#</th>*@
                            <th style="color:plum">Titre</th>
                            <th style="color:plum">Description</th>
                            <th style="color:plum">Price</th>
                            <th style="color:plum">Image</th>
                            <th style="color:plum"> </th>
                            
                        </tr>
                    </thead>


                    @foreach (var item in Model)
                    {
                        <tr>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.titre)
                            </td>
                            <td style="overflow-x :auto;">

                                @Html.DisplayFor(modelItem => item.description)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                          
                            <td>
                                @{string path = "~/Content/Upload/" + item.ImageUrl;}
                                <img src="@Url.Content(path)" width="50" height="50" />

                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.trainingonlineId }, htmlAttributes: new { @class = "btn btn-warning", @style = "color:white" })
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.trainingonlineId }, htmlAttributes: new { @class = "btn btn-warning", @style = "color:white" })*@


                                @Html.ActionLink("Edit", "Edit", new { id = item.trainingonlineId }, new { @class = "btn btn-info", @style = "color:white" })
                                
                                 @Html.ActionLink("Delete", "Delete", new { id = item.trainingonlineId }, new { @class = "btn btn-danger", data_toggle = "modal", data_target = "#myModal", @style = "color:white" })
                              
                                






                            </td>
                        </tr>
                                    }
                </table>


            </div>
        </div>

    </div>


</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">


            <div class="modal-body">





            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script>


$(function () {
    $(".custom-close").on('click', function() {
        $('#myModal').modal('hide');
    });
});</script>
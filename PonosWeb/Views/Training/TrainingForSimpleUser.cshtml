

@model IEnumerable<PonosWeb.Models.TrainingModelView>

@{
    ViewBag.Title = "TrainingForSimpleUser";
    Layout = "~/Views/Shared/_MyTemplate.cshtml";
}




<div class="item">
    <img src="@Url.Content("~/Content/MyTemplate/images/")banner4.png" alt="slider" title="slider" class="img-responsive" />
    <div class="slide-detail">
        <div class="container">
            <div class="slider-caption">
                <div class="off"></div>

                <div class="col-md-4 col-sm-4 col-xs-12 paddright">

                </div>

            </div>
        </div>
    </div>
</div>


<!-- jobs start here -->
<div id="jobs">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <!-- about-content start here -->
                <div class="jobs-content">
                    <h1>Jobs</h1>
                    <ul class="list-inline">
                        <li>
                            <a href="index.html">Home</a>
                        </li>
                        <li>></li>
                        <li>
                            <a href="jobs.html">Trainings</a>
                        </li>
                    </ul>
                </div>
                <!-- jobs-content end here -->
            </div>
        </div>
    </div>
</div>
<!-- jobs end here -->
<!-- job start here -->
<div id="job">
    <div class="container">

        <div class="row">
            <div class="col-md-3 col-sm-3 col-xs-12 hidden-xs">




                <div class="left">
                    <div class="job-candidate">
                        <h1> CANDIDATE</h1>
                        <div class="border"></div>
                        <div class="border1"></div>
                    </div>
                    <div id="latestsfeat" class="owl-carousel">
                        <div class="item">
                            <div class="col-sm-12 col-xs-12">
                                <div class="candidate">
                                    <img src="@Url.Content("~/Content/MyTemplate/images/")cand-3.png" class="img-responsive" />
                                    <h1>Jihen Bach</h1>

                                </div>
                            </div>
                        </div>


                    </div>




           
                </div>



                <div class="leftside employee">
                    <div class="latest-jobs">
                        <h1>Top 3 Trainings</h1>
                        <div class="border"></div>
                        <div class="border1"></div>
                    </div>
@foreach (var item in ViewBag.data)
{
                    <div class="job-content">

                    

    @{string path = "~/Content/Upload/" + item.ImageUrl;}
                        <img src="@Url.Content(path)" alt="p1" title="p1" />
                        <h1>@item.titre </h1>
                        <ul class="list-inline">
                            <li>
                                <a href="#"><i class="fa fa-usd" aria-hidden="true"></i> @item.price</a>
                            </li>
                            
                        </ul>
                        @*<a href="apply-job-form.html">Apply Now <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>*@

                    </div>
        }
                </div>
            </div>

            <div class="col-md-9 col-sm-9 col-xs-12 padd0">
              

                @foreach (var item in Model)
                {

                   
                        

                    <div class="col-md-4 col-sm-4 col-xs-12">

                        <div class="product-box">
                            <div class="image">

                                <div class="image">
                                    <a href="jobs.html">

                                        @{string path = "~/Content/Upload/" + item.ImageUrl;}
                                        <img class="img-responsive" src="@Url.Content(path)" />
                                    </a>

                                </div>
                            </div>

                            <div class="matter">
                                <h1>@Html.DisplayFor(modelItem => item.titre)</h1>
                                <ul class="list-inline">
                                    <li>
                                        <a href="#"><i class="fa fa-bookmark" aria-hidden="true"></i> @Html.DisplayFor(modelItem => item.price)</a>
                                    </li>
                                   

                                </ul>
                                <p>@Html.DisplayFor(modelItem => item.description)</p>
                            </div>

                            @Html.ActionLink("Details", "DetailsForSimpleUser", "Training", new { id = item.trainingonlineId }, new { @class = "btn btn-info" })
                    






                        </div>
                    </div>  }
            </div>
        </div>
    </div>

</div>
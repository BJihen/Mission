

@model PonosWeb.Models.TrainingModelView

@{
    ViewBag.Title = "DetailsForSimpleUser";
    Layout = "~/Views/Shared/_MyTemplate.cshtml";
}



@{string path = "~/Content/Upload/" + Model.ImageUrl;}



<div class="item">
    <img src="@Url.Content("~/Content/MyTemplate/images/")banner4.png" alt="slider" title="slider" class="img-responsive" />
    <div class="slide-detail">
        <div class="container">
            <div class="slider-caption">
                <div class="off"></div>
                <h1>Detail Training </h1>
                <div class="col-md-4 col-sm-4 col-xs-12 paddright">

                </div>

            </div>
        </div>
    </div>
</div>


<!-- job start here -->
<div id="jobdetail">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12 hidden-xs">
                <img src="@Url.Content(path)"alt="p6" title="p6" class="img-responsive" />
                <div class="left-side">
                    <ul class="list-unstyled">

                        <li>
                            <h5>
                                <i class="fa fa-money" aria-hidden="true"></i>
                                Cost
                            </h5>
                            <p>@Html.DisplayFor(model => model.price)</p>
                        </li>
                        <li>
                            <h5>
                                <i class="fa fa-shield" aria-hidden="true"></i>
                                Titre Formation
                            </h5>
                            <p>@Html.DisplayFor(model => model.titre)</p>
                        </li>
                        <li>
                            <h5><i class="fa fa-clock-o" aria-hidden="true"></i> Description</h5>
                            <p>@Html.DisplayFor(model => model.description)</p>
                        </li>

                        <li>

                            @*<button type="button" class="btn btn-info" value="Create"   data-toggle="modal"  data-target="#myModal"   onclick="window.location.href='@Url.Action("Create","Reservation", new { id=Model.trainingonlineId})'">RESERVE</button>*@
                            @Html.ActionLink("Reservation", "Create", "Reservation", new { id = Model.trainingonlineId }, new { @class = "btn btn-danger", @style = "color:white" })
                          
                         </li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8 col-sm-8 col-xs-12 paddleft content">


                <div class="col-md-9 col-sm-9 ">
         
                    
                 @if (ViewBag.isPayed!=null)
                 {

                 

                    foreach (var item in ViewBag.data)
                    {
                        <div class="col-sm-5 col-md-6">

                            <div class="product-box">
                                <div class="image">
                                     <a href="jobs.html">
                                        <img class="img-responsive" src="@Url.Content("~/Content/MyTemplate/images/")p1.jpg" />
                                    </a>
                                    <div class="buttons">
                                        <div class="open-down">
                                            <button type="button" class="rotate1">
                                                <i class="fa fa-link" aria-hidden="true"></i>
                                            </button>
                                            <button type="button" class="rotate1">
                                                <i class="fa fa-search" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="matter">
                                    <h1>@item.titre</h1>
                                    <ul class="list-inline">
                                        <li>
                                            <a href="#"><i class="fa fa-bookmark" aria-hidden="true"></i> @item.nbPage</a>
                                        </li>
                                        <li>
                                            <a href="#"><i class="fa fa-search" aria-hidden="true"></i> @item.dateAjout</a>
                                        </li>

                                    </ul>
                                    <p>@item.description</p>
                                </div>

                                @Html.ActionLink("Details", "Details","CourseForSimpleUser", new { id = item.CourseId }, new { @class = "btn btn-info" })
                                @*<button type="button" class="btn btn-info" onclick="location.href='apply-job-form.html'">Reserve</button>*@






                            </div>
                        </div>



                    }}
                 else
                 {
                     <p>Veuillez Reserver une formation  </p>
                 }
                </div>




            </div>



        </div>
    </div>
</div>


